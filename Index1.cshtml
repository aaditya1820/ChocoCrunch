@model IEnumerable<Aaditya.Models.Choco>
@{
    ViewData["Title"] = "Chocolate List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    /* Base Styles */
    body {
        background-color: #fffaf3;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: clamp(10px, 2vh, 20px);
        min-height: 100vh;
    }

    /* Container Styles */
    .container, .container-fluid {
        background-color: #ffffff;
        border-radius: clamp(8px, 1.5vw, 12px);
        padding: clamp(12px, 3vw, 16px) clamp(15px, 3vw, 20px);
        margin: clamp(10px, 2vh, 20px) auto;
        box-shadow: 0 4px 10px rgba(131, 57, 7, 0.12);
        border: 1px solid #fa9f1c;
        max-width: min(100%, 1200px);
        box-sizing: border-box;
    }

    /* Typography */
    h1, h2, h3, h4 {
        color: #833907;
        font-weight: 600;
        text-align: center;
        margin-bottom: clamp(15px, 2vh, 20px);
        font-size: clamp(1.25rem, 4vw, 1.75rem);
    }

    /* Form Elements */
    .form-label, label {
        font-weight: 600;
        color: #333;
        margin-bottom: clamp(4px, 0.8vh, 8px);
        font-size: clamp(0.85rem, 2vw, 0.95rem);
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
        border: 1px solid #fa9f1c;
        border-radius: clamp(4px, 1vw, 6px);
        padding: clamp(5px, 1vh, 6px) clamp(8px, 1.5vw, 10px);
        font-size: clamp(0.85rem, 2vw, 0.95rem);
        font-weight: 500;
        height: clamp(34px, 6vh, 38px);
        width: 100%;
        box-sizing: border-box;
    }

    textarea.form-control {
        height: clamp(60px, 12vh, 100px);
        min-height: clamp(60px, 12vh, 100px);
    }

    .form-control:focus {
        box-shadow: 0 0 0 clamp(2px, 0.5vw, 3px) rgba(250, 159, 28, 0.4);
        border-color: #fa9f1c;
    }

    /* Button Styles - Updated Color Scheme */
    .btn {
        font-weight: 600;
        padding: clamp(5px, 1vh, 6px) clamp(12px, 3vw, 16px);
        border-radius: clamp(4px, 1vw, 6px);
        font-size: clamp(0.8rem, 2vw, 0.9rem);
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        margin: clamp(2px, 0.5vh, 3px);
        min-width: max-content;
    }

    .btn-primary {
        background-color: #833907;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #6e2e07;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #fa9f1c;
        color: #000;
    }

        .btn-secondary:hover {
            background-color: #e88d0e;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #833907;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #6e2e07;
            transform: translateY(-1px);
        }

    .btn-warning {
        background-color: #fa9f1c;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e88d0e;
            transform: translateY(-1px);
        }

    .btn-success {
        background-color: #833907;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #6e2e07;
            transform: translateY(-1px);
        }

    .btn-info {
        background-color: #fa9f1c;
        color: #000;
    }

        .btn-info:hover {
            background-color: #e88d0e;
            transform: translateY(-1px);
        }

    /* Layout Utilities */
    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: clamp(12px, 2vh, 16px);
        gap: clamp(8px, 1.5vw, 12px);
    }

    .text-end {
        margin-top: clamp(10px, 2vh, 15px);
    }

    .mb-2 {
        margin-bottom: clamp(8px, 1.5vh, 12px) !important;
    }

    /* Table Styles */
    .table th, .table td {
        vertical-align: middle;
        font-size: clamp(0.85rem, 2vw, 0.95rem);
    }

    .table thead {
        background: linear-gradient(to right, #fa9f1c, #fcb045);
        color: #000;
    }

    .text-danger {
        font-weight: 600;
        font-size: clamp(0.9rem, 2vw, 1rem);
        text-align: center;
    }

    /* Hidden Elements */
    header, footer {
        display: none;
    }
</style>


<div class="container mt-4">
    <h2 class="text-center text-primary">Chocolate Inventory</h2>

    <div class="mb-3">
        <a class="btn btn-success" asp-action="Create1">Add New Chocolate</a>
        <a href="/Ready-Bootstrap-Dashboard-master/index.html" class="btn btn-danger">Exit</a>

    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Flavour</th>
                    <th>Description</th>
                    <th>Seller Price</th>
                    <th>Selling Price</th>
                    <th>Margin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var choco in Model)
                {
                    <tr>
                        <td>@choco.ChocolateID</td>
                        <td>@choco.Name</td>
                        <td>@choco.Brand</td>
                        <td>@choco.Flavour</td>
                        <td>@choco.Description</td>
                        <td>@choco.SellerPrice</td>
                        <td>@choco.SellingPrice</td>
                        <td>@choco.Margin</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit1" asp-route-id="@choco.ChocolateID">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete1" asp-route-id="@choco.ChocolateID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
