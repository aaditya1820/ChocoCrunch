@{
    ViewData["Title"] = "Forgot Password";
}
<style>
    header, footer {
        display: none;
    }

    body {
        background-image: url('/images/chocolate.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .choco-text {
        color: #6F4E37; /* Chocolate text color */
    }

    .btn-choco {
        background-color: #6F4E37; /* Rich chocolate brown */
        border: none;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-choco:hover {
            background-color: #5a3e2b; /* Darker chocolate */
            color: #fff;
        }

    .card {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
    }
</style>

<link rel="icon" href="/chocolux-master/assets/images/LOGO.jpg">
<script language="javascript" type="text/javascript">
    window.history.forward();
</script>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h2 class="text-center choco-text">Forgot Password</h2>
        <p class="text-center text-muted">Enter your registered email to receive an OTP.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label for="email" class="form-label choco-text">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" name="email" id="email" required placeholder="Enter your email">
                </div>
            </div>
            <button type="submit" class="btn btn-choco w-100 mt-3">Send OTP</button>
        </form>
    </div>
</div>

<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
