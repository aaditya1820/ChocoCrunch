@model Aaditya.Models.User
@{
    ViewData["Title"] = "User Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="icon" href="/chocolux-master/assets/images/LOGO.jpg">
<script language="javascript" type="text/javascript">
    window.history.forward();
</script>

<style>
    body {
    background-color: #fff9f0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 20px;
}

.form-container {
    max-width: 500px;
    margin: 30px auto;
    background: white;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(131, 57, 7, 0.15);
    border: 2px solid #833907;
}

.form-title {
    color: #833907;
    font-size: 26px;
    font-weight: bold;
    margin-bottom: 25px;
    text-align: center;
    padding-bottom: 12px;
    border-bottom: 2px solid #e0a800;
}

.form-label {
    display: block;
    color: #833907;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 16px;
}

.form-input {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    border: 2px solid #e0a800;
    border-radius: 6px;
    font-size: 16px;
    background-color: #fffdf9;
}

.form-input:focus {
    outline: none;
    border-color: #833907;
    box-shadow: 0 0 0 3px rgba(224, 168, 0, 0.3);
}

header, footer {
    display: none;
}

.btn-save {
    background-color: #833907;
    color: white;
    border: 2px solid #833907;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
    width: 100%;
    font-weight: 600;
    transition: all 0.3s;
}

.btn-save:hover {
    background-color: #6a2e06;
    border-color: #6a2e06;
}

.btn-back {
    background-color: #e0a800;
    color: #833907;
    border: 2px solid #e0a800;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
    width: 100%;
    font-weight: 600;
    transition: all 0.3s;
}

.btn-back:hover {
    background-color: #d39e00;
    border-color: #d39e00;
}

.button-group {
    display: flex;
    gap: 15px;
    margin-top: 25px;
}

.text-danger {
    color: #dc3545;
    font-size: 14px;
    margin-top: -15px;
    margin-bottom: 15px;
    display: block;
}

::placeholder {
    color: #a0a0a0;
    opacity: 1;
}
</style>

<div class="form-container">
    <div class="form-title">Fill up your profile Details</div>

    <form asp-action="Create" method="post">
        <label class="form-label" asp-for="uName">Name</label>
        <input asp-for="uName" class="form-input" placeholder="Enter your name" />
        <span asp-validation-for="uName" class="text-danger"></span>

        <label class="form-label" asp-for="uEmail">Email</label>
        <input asp-for="uEmail" class="form-input" placeholder="Enter your email" />
        <span asp-validation-for="uEmail" class="text-danger"></span>

        <label class="form-label" asp-for="uContact">Contact</label>
        <input asp-for="uContact" class="form-input" placeholder="Enter your contact" />
        <span asp-validation-for="uContact" class="text-danger"></span>

        <label class="form-label" asp-for="uAddress">Address</label>
        <input asp-for="uAddress" class="form-input" placeholder="Enter your address" />

        <label class="form-label" asp-for="uPincode">Pincode</label>
        <input asp-for="uPincode" class="form-input" placeholder="Enter your pincode" />

        <div class="button-group">
            <button type="submit" class="btn-save">Save</button>
           
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>