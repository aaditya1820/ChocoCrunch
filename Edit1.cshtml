@model Aaditya.Models.Choco
@{
    ViewData["Title"] = "Edit Chocolate";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    /* Base Styles */
    body {
        background-color: #fffaf3;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: clamp(10px, 2vh, 20px) clamp(10px, 3vw, 20px);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Container Styles */
    .container {
        background-color: #ffffff;
        border-radius: clamp(10px, 1.5vw, 15px);
        padding: clamp(15px, 3vw, 25px) clamp(15px, 3vw, 30px);
        margin: auto;
        box-shadow: 0 6px 15px rgba(131, 57, 7, 0.1);
        border: 1px solid #fa9f1c;
        max-width: min(800px, 90vw);
        width: 100%;
        box-sizing: border-box;
    }

    /* Header Styles */
    h2 {
        color: #833907;
        font-weight: 700;
        text-align: center;
        margin-bottom: clamp(15px, 3vw, 30px);
        padding-bottom: clamp(10px, 1.5vw, 15px);
        border-bottom: 2px solid #fa9f1c;
        font-size: clamp(1.5rem, 4vw, 2rem);
    }

    /* Form Styles */
    .form-label {
        font-weight: 600;
        color: #5a3d1a;
        margin-bottom: clamp(5px, 1vw, 8px);
        display: block;
        font-size: clamp(0.9rem, 2vw, 1rem);
    }

    .form-control {
        border: 1px solid #fa9f1c;
        border-radius: clamp(6px, 1vw, 8px);
        padding: clamp(6px, 1vw, 8px) clamp(10px, 2vw, 12px);
        font-size: clamp(0.9rem, 2vw, 1rem);
        transition: all 0.3s ease;
        background-color: #fffdf9;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            box-shadow: 0 0 0 clamp(2px, 0.5vw, 3px) rgba(250, 159, 28, 0.2);
            border-color: #e88d0e;
            background-color: #fff;
        }

    textarea.form-control {
        min-height: clamp(80px, 15vh, 120px);
        resize: vertical;
    }

    /* Button Styles */
    .btn {
        font-weight: 600;
        padding: clamp(6px, 1vw, 8px) clamp(15px, 3vw, 20px);
        border-radius: clamp(6px, 1vw, 8px);
        transition: all 0.3s ease;
        font-size: clamp(0.9rem, 2vw, 1rem);
        border: none;
        cursor: pointer;
        width: 100%;
        max-width: min(200px, 40vw);
        margin: clamp(3px, 0.5vw, 5px) 0;
    }

    .btn-primary {
        background-color: #fa9f1c;
        color: #000;
    }

        .btn-primary:hover {
            background-color: #e88d0e;
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: #833907;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #6e2e07;
            transform: translateY(-1px);
        }

    /* Form Group Spacing */
    .mb-3 {
        margin-bottom: clamp(1rem, 2vh, 1.5rem) !important;
    }

    /* Button Container */
    .button-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: clamp(1.5rem, 3vh, 2rem);
        gap: clamp(8px, 1.5vw, 12px);
        width: 100%;
    }

    /* Hide header/footer if needed */
    header, footer {
        display: none;
    }

    /* Input number styles */
    input[type="number"] {
        -moz-appearance: textfield;
    }

        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Ensure form elements don't overflow on small screens */
    input, select, textarea {
        max-width: 100%;
    }
</style>


<div class="container mt-4">
    <h2 class="text-center text-warning">Edit Chocolate</h2>

    <form asp-action="Edit1" method="post">
        <input type="hidden" asp-for="ChocolateID" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Flavour" class="form-label"></label>
            <input asp-for="Flavour" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="SellerPrice" class="form-label"></label>
            <input asp-for="SellerPrice" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="SellingPrice" class="form-label"></label>
            <input asp-for="SellingPrice" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Margin" class="form-label"></label>
            <input asp-for="Margin" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index1" class="btn btn-secondary">Back</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
